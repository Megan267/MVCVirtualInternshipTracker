@model MVCVirtualInternshipTracker.Models.Internship

@{
    ViewData["Title"] = "Feedback";
}

<h2>Provide Feedback</h2>

<form asp-action="Feedback" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="SupervisorFeedback" class="control-label">Supervisor Feedback</label>
        <textarea asp-for="SupervisorFeedback" class="form-control" rows="4"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit Feedback" class="btn btn-primary" />
    </div>
</form>
